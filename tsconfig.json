{
  "compilerOptions": {
    "target": "ESNext",
    "module": "umd",
    "lib": [
      "ESNext",
      "dom",
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "noEmit": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./test", "./scripts", "./contracts", "./src"],
  "files": [
    "./hardhat.config.ts"
  ]
}
